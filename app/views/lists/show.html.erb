<h1><%= @list.name %></h1>

<%= link_to "Back", lists_path %>
<%= link_to "Edit", edit_list_path(@list) %>
<%= button_to "Delete", @list, method: :delete, data: { turbo_confirm: "Deseja mesmo excluir a lista?" } %>

<h2>Tasks</h2>
<%= link_to 'New Task', new_list_task_path(@list) %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Completed</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @list.tasks.each do |task| %>
      <tr>
        <td><%= link_to task.name, [@list, task] %></td>
        <td><%= task.completed %></td>
        <td><%= link_to 'Edit', edit_list_task_path(@list, task) %></td>
        <td><%= button_to 'Destroy', [@list, task], method: :delete, data: { turbo_confirm: 'Deseja mesmo excluir a tarefa?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>